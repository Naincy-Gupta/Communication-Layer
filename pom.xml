			<id>nexus.fedex.com</id>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<url>https://nexus.prod.cloud.fedex.com:8443/nexus/content/repositories/central/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>fxo-nexus-snapshots</id>
