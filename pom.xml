			</releases>
		</pluginRepository>
	</pluginRepositories>
	<distributionManagement>
		<repository>
			<id>release-repo</id>
			<name>Release Repo</name>
			<url>https://nexus.prod.cloud.fedex.com:8443/nexus/repository/release/</url>
		</repository>
		<snapshotRepository>
